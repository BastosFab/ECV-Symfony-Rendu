{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block header %}
    {% include 'layout/navbar.html.twig' %}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
    {% if app.user.profileImage %}
      <img
        src="{{ app.user.profileImage }}"
        alt="Trendy Pants and Shoes"
        class="img-fluid rounded-start h-100 position-relative"
      />
    {% else %}
      <div class="img-fluid rounded-start bg-primary h-100"></div>
    {% endif %}
      <a href="{{path('app_add_image')}}" class="position-absolute bottom-0 start-0 text-white">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" style="width: 20px; fill: #fff; margin: 10px;"><!--! Font Awesome Pro 6.2.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M128 64c0-35.3 28.7-64 64-64H352V128c0 17.7 14.3 32 32 32H512V448c0 35.3-28.7 64-64 64H192c-35.3 0-64-28.7-64-64V336H302.1l-39 39c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l80-80c9.4-9.4 9.4-24.6 0-33.9l-80-80c-9.4-9.4-24.6-9.4-33.9 0s-9.4 24.6 0 33.9l39 39H128V64zm0 224v48H24c-13.3 0-24-10.7-24-24s10.7-24 24-24H128zM512 128H384V0L512 128z"/></svg>
      </a>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h1 class="card-title">{{ app.user.firstname }}</h1>
        <p class="card-text">
          Lastaname: {{ app.user.lastname }}
        </p>
        <p class="card-text">
          Email: {{ app.user.email }}
        </p>
        <p class="card-text">
          <small class="text-muted"><a href="{{path('app_update_form')}}">Edit password</a></small>
        </p>
      </div>
    </div>
  </div>
</div>
{% endblock %}
