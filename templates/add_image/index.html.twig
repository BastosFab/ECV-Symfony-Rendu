{% extends 'base.html.twig' %}

{% block title %}Hello AddImageController!{% endblock %}

{% block header %}
    {% include 'layout/navbar.html.twig' %}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Editing you're profile picture ! ✅</h1>

    <div class='form_container'>
    {{form_start(form)}}
        <!-- Image input -->
        <div class="form-outline mb-4">
            <label for="form3Example3" class="form-label">Upload profile image</label>
            {{form_widget(form.profileImage, {'attr': {'id': 'form3Example3', 'class': 'form-control form-control-lg'}})}}
        </div>
        
        <div class="text-center text-lg-start mt-4 pt-2">
            {{form_widget(form.submit, {'attr': {'id': 'form3Example5', 'class': 'btn btn-primary btn-lg', 'style': 'padding-left: 2.5rem; padding-right: 2.5rem;'}})}}
        </div>
    {{form_end(form)}}
    {% if updated %}
        <div class="alert alert-success" role="alert">
            Image ajoutée
        </div>
    {% endif %}
    </div>
</div>
{% endblock %}
